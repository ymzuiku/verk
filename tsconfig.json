{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmitHelpers": false,
    "importHelpers": true,
    "noResolve": false,
    "noEmit": true,
    "inlineSourceMap": false,
    "declaration": true,
    "outDir": "./umd",
    "declarationDir": "./lib",
    "jsxFactory": "h",
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "example/node_modules",
    "umd",
    "dev"
  ],
  "include": [
    "lib"
  ]
}