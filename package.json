{
  "name": "verk",
  "version": "0.1.0",
  "description": "http://verk.writeflowy.com Only a library, Use library create web application, We don't need a framework",
  "main": "umd/index.js",
  "types": "umd/index.d.ts",
  "private": false,
  "scripts": {
    "es": "esbuild --define:process.env.NODE_ENV=\\\"production\\\" lib/index.ts --outdir=es --target=esnext --bundle --format=esm --jsx-factory=aoife --jsx-fragment=aoife.Frag --minify --splitting",
    "eslint": "eslint --ext .tsx,.ts --fix ./example",
    "dev": "vite",
    "build": "vite build",
    "lib": "node rollup.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./{lib}/**/*.{ts,tsx}": [
      "npm run eslint",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "tslib": "^2.2.0",
    "typescript": "^4.2.4",
    "vite": "^2.2.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ymzuiku/violent.git"
  },
  "bugs": {
    "url": "git+https://github.com/ymzuiku/violent.git"
  },
  "homepage": "http://verk.writeflowy.com",
  "dependencies": {
    "nanoid": "^3.1.22"
  }
}